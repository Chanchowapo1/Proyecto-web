---
import Layout from "../layouts/Layout.astro"
---
<div class="cosonarajoso">
    <p class="text">Conoce mas sobre nosotros como Iglesia</p> 
    <div class="ContenedorMamalon">
        <div class="container">
            <input type="radio" name="slider" id="item-1" checked>
            <input type="radio" name="slider" id="item-2">
            <input type="radio" name="slider" id="item-3">

            <div class="cards">
                <label class="card" for="item-1" id="selector-1">
                    <img src="Rectangle 4410.png">
                </label>
                <label class="card" for="item-2" id="selector-2">
                    <img src="Rectangle 4409.png">
                </label>
                <label class="card" for="item-3" id="selector-3">
                    <img src="Rectangle 4401.png">
                </label>
            </div>
        </div>
    </div>
</div>


<style>
.cosonarajoso {
    width: 90%; /* Ancho del cuadro */
    max-width: 1500px; /* Máximo ancho del cuadro para evitar que se expanda demasiado en pantallas grandes */
    height: auto; /* Altura del cuadro */
    background: linear-gradient(to bottom, rgb(243, 228, 201), white); /* Degradado de color */
    border-radius: 10px; /* Radio de los bordes */
    display: flex;
    flex-direction: column; /* Alinea los elementos verticalmente */
    justify-content: center; /* Centrado horizontal */
    align-items: center; /* Centrado vertical */
    margin: 0 auto; /* Centra horizontalmente */
    padding: 20px; /* Espaciado interno */
}

.text {
    font-size: 18px; /* Tamaño del texto */
    color: black; /* Color del texto */
}
.item-3{
    margin-left: 200px;
}
.item-2{
    margin-right: 200px;
}
.item-1{
    align: center;
}
.cosonarajoso img {
    max-width: 100%; /* Ajusta el tamaño máximo de las imágenes */
    margin-top: 10px; /* Espacio entre cada imagen */
}

/* Estilos para el slider */
.container__slider {
    max-width: 1000px;
    height: 500px;
    margin: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px 10px;
}

input[type=radio] {
    display: none;
}

.container {
    width: 100%;
    max-width: 800px;
    height: 100%;
    max-height: 600px;
    transform-style: preserve-3d;
    display: flex;
    justify-content: center;
    align-items: center;
}

.cards {
    position: relative;
    width: 1200px;
    height: 600px;
}

.card {
    position: absolute;
    width: 60%;
    height: 100%;
    left: 0;
    right: 0;
    margin: auto;
    cursor: pointer;
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
}

img {
    width: 100%;
    height: 100%;
    border-radius: 45px;
    -o-object-fit: cover;
    object-fit: cover;
}

#item-2:checked ~ .cards #selector-1,
#item-1:checked ~ .cards #selector-3,
#item-3:checked ~ .cards #selector-2{
    transform: translateX(-40%) scale(0.8);
    opacity: 0.6;
    z-index: 0;
}

#item-3:checked ~ .cards #selector-1,
#item-1:checked ~ .cards #selector-2,
#item-2:checked ~ .cards #selector-3{
    transform: translateX(40%) scale(0.8);
    opacity: 0.6;
    z-index: 0;
}

#item-1:checked ~ .cards #selector-1,
#item-2:checked ~ .cards #selector-2,
#item-3:checked ~ .cards #selector-3{
    transform: translateX(0) scale(1);
    z-index: 1;
}

/* Consulta de medios para pantallas de tamaño pequeño (móviles) */
@media screen and (max-width: 600px) {
    .cosonarajoso {
        width: 90%; /* Ajusta el ancho para adaptarse mejor a pantallas pequeñas */
        max-width: none; /* Elimina el máximo ancho para permitir que el cuadro se expanda completamente */
    }
    .cards {
    position: relative;
    width: 400px;
    height: 300px;
}


}
</style>
